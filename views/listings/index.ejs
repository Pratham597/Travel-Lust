<% layout('/layouts/boilerplate') %>
<style>
  #filters{
    display: flex;
    flex-wrap: wrap;
    align-items: center;
  }
  .filter{
    text-align: center;
    margin-right: 2.4rem;
    opacity: 0.7;
    margin-top: 1.5rem;
  }
  @media (max-width:568px) {
    .filter{
      margin-right: 6px;
    }
    #filter{
      display: block;
    }
  }
  .filter:hover{
    opacity: 1;
    cursor: pointer;
  }
  .filter p{
    font-size: 0.8rem;
  }
  .filter a{
    text-decoration: none;
  }

  .tax-info{
    display: none;
  }
  .tax-toggle{
    border: 1px solid black;
    border-radius: 1rem;
    height: 3.20rem;
    padding: 1rem;
    display: flex;
    align-items: center;
  }
</style>
<div id="filters">
  <div class="filter">
    <div><a href="/listings/Trending"><i class="fa-solid fa-fire"></i></a></div>
    <p>Trending</p>
  </div>
  <div class="filter">
    <div><a href="/listings/Rooms"><i class="fa-solid fa-bed"></i></a></div>
    <p>Rooms</p>
  </div>
  <div class="filter">
    <div><a href="/listings/IconicCity"><i class="fa-solid fa-mountain-city"></i></a></div>
    <p>Iconic-City</p>
  </div>
  <div class="filter">
    <div><a href="/listings/Mountain"><i class="fa-solid fa-mountain"></i></a></div>
    <p>Mountain</p>
  </div>
  <div class="filter">
    <div><a href="/listings/Castles"><i class="fa-brands fa-fort-awesome"></i></a></div>
    <p>Castles</p>
  </div>
  <div class="filter">
    <div><a href="/listings/AmazingPools"><i class="fa-solid fa-person-swimming"></i></a></div>
    <p>Pools</p>
  </div>
  <div class="filter">
    <div><a href="/listings/Camping"><i class="fa-solid fa-campground"></i></a></div>
    <p>Camping</p>
  </div>
  <div class="filter">
    <div><a href="/listings/Farms"><i class="fa-solid fa-cow"></i></a></div>
    <p>Farms</p>
  </div>
  <div class="filter">
    <div><a href="/listings/Arctic"><i class="fa-regular fa-snowflake"></i></a></div>
    <p>Arctic</p>
  </div>
  <div class="filter">
    <div><a href="/listings/Farms"><i class="fa-solid fa-igloo"></i></a></div>
    <p>Domes</p>
  </div>
  <div class="filter">
    <div><a href="/listings/Arctic"><i class="fa-solid fa-ship"></i></a></div>
    <p>Boats</p>
  </div>

  <div class="tax-toggle ms-xl-4 my-sm-2">
    <div class="form-check-reverse form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
      <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
    </div> 
  </div>
</div>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3 ">
  <% for (const listing of listings) { %>
  <a href="/listings/<%= listing._id %>" class="listing-link ">
    <div class="card col listing-card">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top"
        alt="Listing-Image"
        style="height: 20rem"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %></b> <br />
          â‚¹ <%=listing.price.toLocaleString('en-IN') %> /night
          <span class="tax-info"> &nbsp;+18% GST</span>
        </p>
      </div>
    </div>
  </a>
  <% } %>

  <% if(listings.length ==0) {%>
    <h2>No such result found !</h2>
    <% } %>
</div>
<script>
  let taxSwitch=document.getElementById('flexSwitchCheckDefault');
  taxSwitch.addEventListener('click',(event)=>{
    let taxInfo=document.getElementsByClassName('tax-info');
    for(let info of taxInfo){
      if(info.style.display==='inline') info.style.display='none';
      else info.style.display='inline';
    }
  })
</script>